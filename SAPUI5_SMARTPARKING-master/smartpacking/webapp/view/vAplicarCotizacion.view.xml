<mvc:View controllerName="sp.smartpacking.controller.vAplicarCotizacion"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:layout="sap.ui.layout"   
    xmlns:core="sap.ui.core"  
    xmlns:tab="sap.ui.table" 
    xmlns:f="sap.ui.layout.form"
    xmlns:uxap="sap.uxap"
    xmlns:fb="sap.ui.comp.filterbar"
    >
    <Page id="page" title="Criterios" showHeader="false" showNavButton="true" class="bg_imagen_blur" navButtonPress=".onApp" >
        <content> 
            <FlexBox id="flex_box_title" alignItems="Center" justifyContent="SpaceBetween" class="fondo_celeste">
                <ImageContent src="../img/sap-logo.svg" class="sapUiSmallMarginBottom"/>

                <ImageContent src="../img/smart_packing_logo.png" class="sapUiSmallMarginBottom"/>
                <ToolbarSpacer /> 
                <!-- <MenuButton icon="sap-icon://customer" id="menu_but_panel_title" text="Bienvenido" class="texto_blanco opacidad_transparente sapUiSmallMarginEnd">
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
                    <Menu>
                        <MenuItem text="Log out" icon="sap-icon://log" press="onPress_logout" />
                    </Menu>
                </MenuButton> -->
            </FlexBox>

            <FlexBox class="blanco" alignItems="Center" justifyContent="Start">
                    <Button id="back_itle" icon="sap-icon://nav-back" press=".onApp"/>  
                    <Label class="title_negrita sapUiSmallMargin" text="REGISTRO DE PRODUCTO INTERMEDIO" />
            </FlexBox>
            <Panel width="100%" class="sapUiNoContentPadding opacidad_transparente">
                <VBox>
                    <tab:Table id="table01comparar_Cotizacion"
                        showNoData="true"
                        selectionMode="Single"
                        selectionBehavior="RowOnly"
                        visibleRowCount="15"
                        enableSelectAll="false" 
                        rows="{  path: 'Model_Table_Registro_Cotizacion>/value' }" 
                        ariaLabelledBy="title" 
                        cellClick="rowSelectionChangeMovimiento">
                        <tab:extension>
                            <OverflowToolbar id="tab01Id006" style="Clear">
                                <DatePicker id="pickerTb1" width="10rem" placeholder="Ingrese" valueFormat="yyyyMMdd" displayFormat="dd/MM/yyyy"/> 
                                <ComboBox id="idAlmacentb" items="{ path: 'myParam>/Model_cmb_almacen'}" placeholder="- Almacen -" required="true"  class="opacidad_transparente">
                                    <core:Item key="{myParam>LGORT}" text="{myParam>LGORT} - {myParam>LGOBE}"/>
                                </ComboBox>
                                <Button icon="sap-icon://search" text="Buscar" press="OnBuscarResgistro"/>     
                                <ToolbarSpacer id="tab01Id007" /> 
                                <Button id="tab01Id0011" icon="sap-icon://compare" text="NotificaciÃ³n de Producto Intermedio" press="onCompararC2"/>   
                                <Button icon="sap-icon://download" text="Descargar tabla" press="onDownloadTable"/>  
                            </OverflowToolbar>
                        </tab:extension>
                        <tab:columns>
                            <tab:Column id="table01Id001" sortProperty="material" filterProperty="material" autoResizable="true" width="auto">
                                <Label id="table01Id001l" textAlign="Center" wrapping ="true"  text="PRODUCTO INTERMEDIO" />
                                <tab:template>  <Text id="table01Id001li" text="{Model_Table_Registro_Cotizacion>MATNR}" wrapping="false" /> </tab:template>
                            </tab:Column>
                            <tab:Column id="table01Id002" sortProperty="articuloRFQ" filterProperty="articuloRFQ" autoResizable="true" width="auto">
                                <Label id="table01Id002l" textAlign="Center" wrapping ="true"  text="LOTE" />
                                <tab:template> <Text id="table01Id002i" text="{Model_Table_Registro_Cotizacion>ZCOD_VOL}" wrapping="false" /> </tab:template>
                            </tab:Column>
                            <tab:Column id="table01Id003" sortProperty="valorCot" filterProperty="valorCot" autoResizable="true" width="auto">
                                <Label id="table01Id003l" textAlign="Center" wrapping ="true"  text="BATCH" />
                                <tab:template>  <Text id="table01Id003i" text="{Model_Table_Registro_Cotizacion>WERKS}"  wrapping="false" /> </tab:template>
                            </tab:Column>
                            <tab:Column id="table01Id004" sortProperty="cotsolicitado" filterProperty="cotsolicitado" autoResizable="true" width="auto">
                                <Label id="table01Id004l" textAlign="Center" wrapping ="true"  text="AUTOCLAVE" />
                                <tab:template>  <Text id="table01Id004i" text="{Model_Table_Registro_Cotizacion>WERKS}" wrapping="false" /> </tab:template>
                            </tab:Column>
                            <tab:Column id="table01Id005" sortProperty="fecha" filterProperty="fecha" autoResizable="true" width="auto">
                                <Label id="table01Id005l" textAlign="Center" wrapping ="true"  text="TURNO" />
                                <tab:template> <Text id="table01Id005i" text="{Model_Table_Registro_Cotizacion>WERKS}" wrapping="false"/> </tab:template>
                            </tab:Column>
                            <tab:Column id="table01Id006" sortProperty="articulo" filterProperty="articulo" autoResizable="true" width="auto">
                                <Label id="table01Id006l" textAlign="Center" wrapping ="true"  text="HORA" />
                                <tab:template> <Text id="table01Id006i" text="{Model_Table_Registro_Cotizacion>WERKS}" wrapping="false" /> </tab:template>
                            </tab:Column>
                            <tab:Column id="table01Id00622" sortProperty="articulo" filterProperty="articulo" autoResizable="true" width="auto">
                                <Label id="table01Id006l22" textAlign="Center" wrapping ="true"  text="PALLET" />
                                <tab:template> <Text id="table01Id006i22" text="{Model_Table_Registro_Cotizacion>WERKS}" wrapping="false" /> </tab:template>
                            </tab:Column>
                            <tab:Column id="table01Id00623" sortProperty="articulo" filterProperty="articulo" autoResizable="true" width="auto">
                                <Label id="table01Id006l23" textAlign="Center" wrapping ="true"  text="ETIQUETA" />
                                <tab:template> <Text id="table01Id006i23" text="{Model_Table_Registro_Cotizacion>WERKS}" wrapping="false" /> </tab:template>
                            </tab:Column>
                        </tab:columns>
                    </tab:Table>
                </VBox>
            </Panel>
        </content>
        <footer>
			<OverflowToolbar>
					<ToolbarSpacer />
					<Button id="tab1" icon="sap-icon://save" text="Registrar" tooltip="Guardar" press=""/>  
                    <Button id="tab2" icon="sap-icon://cancel" text="Cancelar" tooltip="Cancelar" press=""/>
			</OverflowToolbar>
		</footer>
    </Page>
</mvc:View>